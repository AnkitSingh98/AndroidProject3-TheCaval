<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.ankithacks.thecaval.AboutUs">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/aboutus" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:text="Yuj is a one-stop online platform that strives to bring the facilities of fully furnished garbage to the very doorstep of the common man- a better service, without the headache. "
        android:textSize="15sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="210dp"
        android:fontFamily="sans-serif-light"
        android:text="Version  1.0.1"
        android:textStyle="italic" />
</LinearLayout>
